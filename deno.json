{
  "workspaces": ["./analysis", "./dashboard", "./supabase", "./website"],
  "tasks": {
    "start": "deno run --allow-net packages/main/mod.ts",
    "test": "deno test --allow-net packages/*/tests/",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "dashboard:serve": "cd dashboard && npm run serve",
    "dashboard:start": "cd dashboard && npm run start"
  },
  "imports": {
    "analysis/": "./analysis/",
    "dashboard/": "./dashboard/",
    "supabase/": "./supabase/",
    "website/": "./website/",
    "@hookform/resolvers": "npm:@hookform/resolvers@^3.9.0",
    "@radix-ui/react-accordion": "npm:@radix-ui/react-accordion@^1.2.1",
    "@radix-ui/react-dialog": "npm:@radix-ui/react-dialog@^1.1.2",
    "@radix-ui/react-icons": "npm:@radix-ui/react-icons@^1.3.0",
    "@radix-ui/react-label": "npm:@radix-ui/react-label@^2.1.0",
    "@radix-ui/react-popover": "npm:@radix-ui/react-popover@^1.1.2",
    "@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@^1.2.0",
    "@radix-ui/react-select": "npm:@radix-ui/react-select@^2.1.2",
    "@radix-ui/react-separator": "npm:@radix-ui/react-separator@^1.1.0",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.0",
    "@supabase/supabase-js": "npm:@supabase/supabase-js@^2.45.4",
    "@tanstack/react-query": "npm:@tanstack/react-query@^5.59.3",
    "@tanstack/react-query-devtools": "npm:@tanstack/react-query-devtools@^5.59.0",
    "@tanstack/react-router": "npm:@tanstack/react-router@^1.63.5",
    "@tanstack/router-devtools": "npm:@tanstack/router-devtools@^1.63.5",
    "@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.63.5",
    "class-variance-authority": "npm:class-variance-authority@^0.7.0",
    "clsx": "npm:clsx@^2.1.1",
    "date-fns": "npm:date-fns@^4.1.0",
    "lucide-react": "npm:lucide-react@^0.451.0",
    "next-themes": "npm:next-themes@^0.3.0",
    "react": "npm:react@^18.2.0",
    "react-day-picker": "npm:react-day-picker@8.10.1",
    "react-dom": "npm:react-dom@^18.2.0",
    "react-hook-form": "npm:react-hook-form@^7.53.0",
    "recharts": "npm:recharts@^2.12.7",
    "redaxios": "npm:redaxios@^0.5.1",
    "sonner": "npm:sonner@^1.5.0",
    "tailwind-merge": "npm:tailwind-merge@^2.5.3",
    "tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
    "vitest": "npm:vitest@^2.1.2",
    "zod": "npm:zod@^3.23.8"
  },
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx"
  },
  "exclude": ["packages/dashboard/**/*"],
  "packages": {
    "dashboard": {
      "compilerOptions": {
        "baseUrl": "./packages/dashboard",
        "paths": {
          "@/*": ["./src/*"]
        }
      }
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"],
    "overrides": [
      {
        "files": "*.sql",
        "options": {
          "lineWidth": 200
        }
      }
    ]
  }
}
